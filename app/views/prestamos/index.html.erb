<h1>Listing Loans</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p>New loan? <%= link_to "Add one now!", new_path %></p>

    <table class=" table table-striped sortable">
      <tr>
        <th>Id</th>
        <th>Nombre Cliente</th>
        <th>Total Prestamo</th>
         <th colspan="3"></th>
      </tr>
     
      <% @prestamos.each do |prestamo| %>
        <tr>
          <td><%= link_to prestamo.id, prestamo_path(prestamo) %></td>
          <td><%= prestamo.nombre  %></td>
          <td>$<%= prestamo.monto %></td>
          <td><%= link_to 'Edit', edit_prestamo_path(prestamo) %></td>
        </tr>
      <% end %>
    </table>

    </div>
</div>
